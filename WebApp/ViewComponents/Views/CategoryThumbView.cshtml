@model IEnumerable<DbModelsCore.Models.Ecommerce.Catalog.DBProductCategory>

@if (Model != null && Model.Count() > 0)
{

    @foreach (var item in Model)
    {
        <div class="product-item">
            <a href="@Url.Action("", "Products", new {cat = item.ID , @name=item.Name})">
                <div class="product-item-img ">
                    <img src="@item.ImageUrl" class="w-100 h-100" alt="">
                </div>
                <div class="product-item-text text-center mt-2">
                    <div class="product-item-title">
                        @item.Name
                    </div>
                </div>
            </a>
        </div>
    }
}