@model IEnumerable<DbModelsCore.Models.Ecommerce.Catalog.DBSliderImage>

<div class="banner-carousel">
    <div id="carouselExampleIndicators" class="carousel carousel-fade" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @if (Model != null && Model.Count() > 0)
            {
                int j = 0;
                foreach (var item in Model)
                {
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@j" class="active" aria-current="true" aria-label="Slide @(j+1)"></button>

                    j++;
                }
            }
        </div>
        <div class="carousel-inner">
            @if (Model != null && Model.Count() > 0)
            {
                int j = 0;
                foreach (var item in Model)
                {
                    <div class="carousel-item @(j==0?" active " : "")" style="background-color: @(!string.IsNullOrEmpty(item.ColorCode)? item.ColorCode : "#8E020F");">
                        <img src="@item.ImageUrl" class="d-block w-100 h-100" alt="...">
                    </div>
                    j++;
                }
            }
        </div>
    </div>
</div>