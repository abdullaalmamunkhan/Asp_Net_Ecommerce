@model ViewModelsCore.Admin.VMRegistrationProcess
@{
    ViewData["Title"] = "Register";
}

<div class="login-info-wrap">
    <div class="container">
        <div class="login-wrapper">
            <div class="login-title">
                <h3>Create your CoscoBazar Account.</h3>
                <div class="login-other ">
                    <span class="d-inline-block">Already member? <a asp-action="Login" asp-area="" asp-controller="Account">Login</a> here.</span>
                </div>
            </div>
            <div>
                <form asp-controller="Account" asp-action="Register" asp-area="" enctype="multipart/form-data" data-parsley-validate>
                    @Html.AntiForgeryToken()
                    <div class="login-wrap">
                        <div class="login-content1">
                            <div class="eml-query">
                                <label>Full Name *</label>
                                <input type="text" asp-for="FullName" placeholder="Please enter your full name" value="" required>
                                <span>You can't leave this empty.</span>
                            </div>
                            <div class="eml-query">
                                <label>Email *</label>
                                <input type="text" asp-for="Email" placeholder="Please enter your email" value="" required>
                                <span>You can't leave this empty.</span>
                            </div>
                            <div class="pass-query position-relative">
                                <label>Password</label>
                                <input type="password" asp-for="Password" placeholder="Please enter your password" value="" data-parsley-minlength = "8"  data-parsley-pattern = "(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z]).*"  data-parsley-pattern-message = "Your password must contain at least (1) lowercase, (1) uppercase letter and (1) uppercase number." required>
                                <div class="pass-show">
                                    <i class="far fa-eye-slash" id="pass-hide"></i>
                                    <i class="far fa-eye" id="pass-show"></i>
                                </div>
                                <div class="input-password-icon">
                                    <span>You can't leave this empty.</span>
                                </div>
                            </div>
                            <div class="login-forgot">
                                <a href="#">Forgot Password?</a>
                            </div>
                        </div>
                        <div class="login-content2">
                            <div class="login-btn">
                                <button type="submit" class="submit-button large-btn">Register</button>
                            </div>
                            <div class="login-third">
                                <div class="other-login-btn">
                                    <div class="login-line">
                                        <span>Or, login with</span>
                                    </div>
                                    <div class="social-login">
                                        <button class="button large-btn facebook"><i class="fab fa-facebook-f"></i> Facebook</button>
                                        <button class="button large-btn google"><i class="fab fa-google-plus-g"></i> Google</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

