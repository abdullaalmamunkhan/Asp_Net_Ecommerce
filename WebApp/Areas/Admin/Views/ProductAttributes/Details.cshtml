@model ViewModelsCore.VMEcom.VMProcess.VMCatalog.VMProductAttributeProcess
@{
    ViewData["Title"] = "Product Attribute Details";
}

<div class="row page-titles">
    <div class="col-6 align-self-center">
        <h3>Product Attribute Details</h3>
    </div>
    <div class="col-6 text-right font-12">
        <a href="~/admin/dashboard">Admin</a> &gt;
        <a asp-action="" asp-controller="ProductAttributes" asp-area="Admin">Product Attributes</a> &gt;
        Product Attribute Details
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card ">
            <div class="card-body">
                <h4 class="card-title text-uppercase mb-20 form-card-title">Product Attribute Details</h4>

                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-12">
                        <div class="form-group m-t-40 row">
                            <label class="col-12 col-form-label">Name</label>
                            <div class="col-12">
                                <input class="form-control" asp-for="ProductAttribute.Name" type="text" placeholder="Name" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @if (Model.SelectedCategories != null && Model.SelectedCategories.Count > 0)
                    {
                        int j = 0;
                        foreach (var item in Model.SelectedCategories)
                        {
                            <div class="col-md-3 col-sm-6 mb-3">
                                <input asp-for="SelectedCategories[j].Id" type="hidden" value="@item.Id" readonly>
                                <div class="form-check">
                                    <input class="form-check-input" id="Chk_@item.Id" asp-for="SelectedCategories[j].IsCheck" type="checkbox" readonly>
                                    <label class="form-check-label" for="Chk_@item.Id" readonly>
                                        @item.Name
                                    </label>
                                </div>
                            </div>
                            j++;
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
